// cSpell Settings
{
  // Version of the setting file.  Always 0.2
  "version": "0.2",
  // language - current active spelling language
  "language": "en",
  // words - list of words to be always considered correct
  "words": [
    "autodocs",
    "autoname",
    "BURI",
    "customise",
    "datetime",
    "drad",
    "Escafe",
    "fullscreen",
    "guilab",
    "icns",
    "lefthook",
    "Matsuda",
    "newpkg",
    "ognl",
    "optimizelegibility",
    "preinstall",
    "ryoma",
    "Ryouichi",
    "serde",
    "solidjs",
    "stylelint",
    "tailwindcss",
    "tauri",
    "textareas",
    "VITE"
  ],
  // flagWords - list of words to be always considered incorrect
  "flagWords": [],
  // ignorePaths - list of globs to specify which files are to be ignored.
  "ignorePaths": [
    "node_modules/**",
    "dist/**",
    "pnpm-lock.yaml",
    "src-tauri/target/**",
    "**/*.icns",
    "**/*.svg",
    "**/*.avif",
    "lefthook.yml",
    "**/*.mp4"
  ]
}
