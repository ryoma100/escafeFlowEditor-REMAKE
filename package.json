{
	"name": "escafe-flow-editor-remake",
	"version": "0.0.0",
	"description": "escafeFlowEditor REMAKE",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"start": "vite",
		"dev": "vite --host",
		"test": "vitest",
		"coverage": "vitest run --coverage",
		"build": "vite build",
		"serve": "vite preview",
		"tauri": "tauri",
		"lint": "run-p lint:* --silent",
		"lint:cspell": "cspell --no-progress --no-summary '**'",
		"lint:tsc": "tsc --noEmit",
		"lint:eslint": "eslint",
		"lint:biome": "biome check --diagnostic-level=warn",
		"lint-fix": "run-s -c lint-fix:*",
		"lint-fix:eslint": "eslint --fix",
		"lint-fix:biome": "biome check --diagnostic-level=warn --write",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"test-storybook": "rm -rf __screenshots__; test-storybook",
		"vrt-before": "pnpm test-storybook; mkdir -p __vrt__; cd $_ && rm -rf before; cp -r ../__screenshots__ before",
		"vrt-after": "pnpm test-storybook; mkdir -p __vrt__; cd $_ && rm -rf after; cp -r ../__screenshots__ after",
		"vrt-diff": "cd __vrt__; rm -rf diff; reg-cli after before diff -R report.html; open report.html",
		"preinstall": "npx -y only-allow pnpm"
	},
	"dependencies": {
		"@corvu/resizable": "^0.2.4",
		"@solid-primitives/i18n": "^2.2.0",
		"@tauri-apps/api": "^2.3.0",
		"@tauri-apps/plugin-dialog": "~2.2.0",
		"@tauri-apps/plugin-fs": "~2.2.0",
		"@tauri-apps/plugin-process": "~2.2.0",
		"@tauri-apps/plugin-shell": "~2.2.0",
		"fast-xml-parser": "^5.0.8",
		"solid-js": "^1.9.5",
		"valibot": "1.0.0-rc.3"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@chromatic-com/storybook": "^3.2.5",
		"@storybook/addon-essentials": "^8.6.4",
		"@storybook/addon-interactions": "^8.6.4",
		"@storybook/addon-links": "^8.6.4",
		"@storybook/addon-themes": "^8.6.4",
		"@storybook/blocks": "^8.6.4",
		"@storybook/builder-vite": "^8.6.4",
		"@storybook/docs-tools": "^8.6.4",
		"@storybook/test": "^8.6.4",
		"@storybook/test-runner": "^0.22.0",
		"@tailwindcss/vite": "^4.0.12",
		"@tauri-apps/cli": "^2.3.1",
		"@testing-library/jest-dom": "^6.6.3",
		"@vitest/coverage-v8": "^3.0.8",
		"cspell": "^8.17.5",
		"eslint": "^9.22.0",
		"eslint-plugin-solid": "^0.14.5",
		"globals": "^16.0.0",
		"jsdom": "^26.0.0",
		"lefthook": "^1.11.3",
		"npm-run-all": "^4.1.5",
		"reg-cli": "^0.18.10",
		"solid-devtools": "^0.33.0",
		"storybook": "^8.6.4",
		"storybook-solidjs": "1.0.0-beta.6",
		"storybook-solidjs-vite": "1.0.0-beta.6",
		"storycap-testrun": "^0.0.2",
		"tailwindcss": "^4.0.12",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.0",
		"vite": "^6.2.1",
		"vite-plugin-solid": "^2.11.6",
		"vite-plugin-solid-svg": "^0.8.1",
		"vitest": "^3.0.8"
	},
	"volta": {
		"node": "20.18.3",
		"pnpm": "10.6.1"
	}
}
