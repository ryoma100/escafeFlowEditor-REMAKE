{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "files": {
    "include": ["src/**/*"]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "organizeImports": {
    "enabled": true
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "correctness": {
        "noUnusedImports": "warn",
        "noUnusedVariables": "warn",
        "noSwitchDeclarations": "off",
        "useImportExtensions": "off"
      },
      "complexity": {
        "noForEach": "off",
        "noExcessiveCognitiveComplexity": "info",
        "useSimplifiedLogicExpression": "info",
        "useDateNow": "info"
      },
      "nursery": {
        "useSortedClasses": {
          "level": "warn",
          "fix": "safe",
          "options": {}
        }
      },
      "style": {
        "useBlockStatements": "info",
        "useSingleCaseStatement": "off",
        "noDefaultExport": "info",
        "noNamespaceImport": "info",
        "useNamingConvention": "info"
      },
      "a11y": {
        "noSvgWithoutTitle": "info",
        "useAltText": "info",
        "useValidAnchor": "info",
        "useKeyWithClickEvents": "info"
      },
      "performance": {
        "useTopLevelRegex": "info"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  }
}
